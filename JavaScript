fetch(url, {
    method: 'POST',
    headers: {
        'Content-Type': 'application/json'
    },
    body: JSON.stringify(respostas)
}).then(function(response) {
    if (!response.ok) {
        throw new Error('Erro: ' + response.statusText);
    }
    return response.json();
}).then(function(data) {
    alert('Respostas enviadas com sucesso!');
    localStorage.removeItem('respostasAlunos'); // Remove as respostas salvas ap√≥s o sucesso
}).catch(function(error) {
    alert('Ocorreu um erro ao enviar as respostas: ' + error.message);
});


